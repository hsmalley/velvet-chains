{
  "$schema": "https://json.schemastore.org/prettierrc",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "proseWrap": "always",
  "plugins": [],
  "overrides": [
    { "files": "*.md", "options": { "proseWrap": "always" } },
    { "files": "*.mdx", "options": { "proseWrap": "always" } },
    { "files": ["*.yml", "*.yaml"], "options": { "singleQuote": false } }
  ]
}
