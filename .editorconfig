# Velvet Chains Code Conduct - maintaining silken standards across the fleet
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml,toml}]
indent_size = 2

[*.{js,jsx,ts,tsx,json}]
indent_size = 2

[*.{css,scss,mdx}]
indent_size = 2

[*.{html,htm}]
indent_size = 2

[*.css.ts]
indent_size = 2

[*.css.tsx]
indent_size = 2

[*.module.css]
indent_size = 2

[*.module.scss]
indent_size = 2

[*.module.sass]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
